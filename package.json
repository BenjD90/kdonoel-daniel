{
  "name": "kdos-daniel-web",
  "version": "1.0.0",
  "description": "Kdos daniel web app",
  "scripts": {
    "ng": "ng",
    "serve": "echo \"node version : $(node --version)\" && ng serve",
    "build": "ng build --configuration production",
    "analyze": "webpack-bundle-analyzer dist/browser/stats.json",
    "htmllint": " htmllint 'src/app/**/*.html'",
    "format": "prettier --write '{,@(src|test)/**/}*.*'",
    "tslint": "tslint --project tsconfig.json --format verbose '{src,test}/**/*.ts'",
    "tslint:apply": "tslint --fix --project tsconfig.json '{src,test}/**/*.ts'",
    "lint": "npm run htmllint && npm run tslint",
    "test": "echo 'no tests'",
    "release": "export BABEL_DISABLE_CACHE=1 && release-it --ci",
    "release:dry": "export BABEL_DISABLE_CACHE=1 && release-it --ci --dry-run=true",
    "package": "rm -rf build/*.tar && npm run build && tar cf build/$npm_package_name-v$npm_package_version.tar dist/*",
    "build:changelog": "conventional-changelog -i CHANGELOG.md -s -p jscs -r 0",
    "post:release": "echo Successfully released $npm_package_version"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "@ng-select/ng-select": "^7.4.0",
    "@ngx-translate/core": "^13.0.0",
    "@ngx-translate/http-loader": "^6.0.0",
    "angulartics2": "^11.0.0",
    "bootstrap": "^4.1.3",
    "bootstrap-darkmode": "^0.9.1",
    "font-awesome": "4.7.0",
    "jwt-decode": "^3.1.2",
    "linkifyjs": "^3.0.3",
    "ng-bootstrap-darkmode": "^0.5.0",
    "ngx-bootstrap": "^7.1.0",
    "rxjs": "~6.6.0",
    "rxjs-compat": "^6.6.7",
    "sweetalert2": "^11.1.9",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.13",
    "@angular/cli": "~12.2.13",
    "@angular/compiler-cli": "~12.2.0",
    "@commitlint/cli": "^14.1.0",
    "@neo9/n9-coding-style": "^2.0.0",
    "@release-it/conventional-changelog": "^3.3.0",
    "@rxts/rxjs-tslint": "^0.2.1",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "conventional-changelog-cli": "^2.1.1",
    "htmllint-cli": "^0.0.7",
    "husky": "^7.0.4",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "prettier": "^2.4.1",
    "release-it": "^14.11.6",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "~4.3.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn run format && yarn run lint"
    }
  }
}
