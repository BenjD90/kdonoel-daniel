{
  "name": "kdos-daniel-web",
  "version": "2.0.0-rc.0",
  "description": "Kdos daniel web app",
  "scripts": {
    "ng": "ng",
    "serve": "echo \"node version : $(node --version)\" && ng serve",
    "dev": "yarn run serve",
    "build": "ng build --configuration production",
    "analyze": "webpack-bundle-analyzer dist/browser/stats.json",
    "htmllint": " htmllint 'src/app/**/*.html'",
    "format": "prettier --write '{,@(src|test)/**/}*.*'",
    "eslint": "eslint --config .eslintrc.yaml '{src,test}/**/*.ts'",
    "eslint:apply": "eslint --fix --config .eslintrc.yaml '{src,test}/**/*.ts'",
    "lint": "npm run htmllint && npm run eslint",
    "test": "echo 'no tests'",
    "release": "export BABEL_DISABLE_CACHE=1 && release-it --ci",
    "release:dry": "export BABEL_DISABLE_CACHE=1 && release-it --ci --dry-run=true",
    "package": "rm -rf build/*.tar && npm run build && tar cf build/$npm_package_name-v$npm_package_version.tar dist/*",
    "build:changelog": "conventional-changelog -i CHANGELOG.md -s -p jscs -r 0",
    "post:release": "echo Successfully released $npm_package_version"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~17.3.12",
    "@angular/common": "~17.3.12",
    "@angular/compiler": "~17.3.12",
    "@angular/core": "~17.3.12",
    "@angular/forms": "~17.3.12",
    "@angular/platform-browser": "~17.3.12",
    "@angular/platform-browser-dynamic": "~17.3.12",
    "@angular/router": "~17.3.12",
    "@ng-select/ng-select": "^12.0.0",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^7.0.0",
    "@nth-cloud/ng-toggle": "^9.0.1",
    "@popperjs/core": "^2.11.8",
    "angulartics2": "^12.2.0",
    "bootstrap": "^5.2.2",
    "bootstrap-darkmode": "^5.0.1",
    "font-awesome": "4.7.0",
    "jwt-decode": "^3.1.2",
    "linkify-string": "^4.0.2",
    "linkifyjs": "^4.0.2",
    "lodash": "^4.17.21",
    "ng-bootstrap-darkmode": "^5.0.0",
    "ngx-bootstrap": "^12.0.0",
    "rxjs": "~7.5.7",
    "rxjs-compat": "^6.6.7",
    "sweetalert2": "^11.6.10",
    "tslib": "^2.4.1",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~17.3.11",
    "@angular/cli": "~17.3.11",
    "@angular/compiler-cli": "~17.3.12",
    "@commitlint/cli": "^17.2.0",
    "@neo9/n9-coding-style": "^6.1.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@rxts/rxjs-tslint": "^0.2.1",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^18.11.9",
    "conventional-changelog-cli": "^2.2.2",
    "htmllint-cli": "^0.0.7",
    "husky": "^8.0.2",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "prettier": "^2.7.1",
    "release-it": "^15.5.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^5.6.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn run format && yarn run lint"
    }
  }
}
